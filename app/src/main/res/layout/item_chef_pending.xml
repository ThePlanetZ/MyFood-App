<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dish Image -->
        <ImageView
            android:id="@+id/imageViewDish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/burger" />

        <!-- Dish Details -->
        <LinearLayout
            android:id="@+id/linear_layout_dish_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewDish"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Dish Name -->
            <TextView
                android:id="@+id/textViewDishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dish Name"
                android:textSize="18sp" />

            <!-- Dish Price -->
            <TextView
                android:id="@+id/textViewDishPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <!-- Dish Quantity -->
            <TextView
                android:id="@+id/textViewDishQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <!-- Customer Name -->
            <TextView
                android:id="@+id/textViewCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <!-- Customer Phone -->
            <TextView
                android:id="@+id/textViewCustomerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Phone"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <!-- Customer Address -->
            <TextView
                android:id="@+id/textViewCustomerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Address"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <!-- Customer City -->
            <TextView
                android:id="@+id/textViewCustomerCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer City"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/linear_layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_dish_details"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Accept Button -->
            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:background="@drawable/add_to_cart_bg" />

            <!-- Reject Button -->
            <Button
                android:id="@+id/buttonReject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reject"
                android:background="@drawable/add_to_cart_bg"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>