<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accepted Orders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@color/lhrba"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Order Details -->
        <LinearLayout
            android:id="@+id/linear_layout_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="363dp"
                android:layout_height="69dp">

                <!-- Order ID TextView -->
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="102dp"
                    android:layout_marginLeft="102dp"
                    android:layout_toStartOf="@id/copyIcon"
                    android:layout_toLeftOf="@id/copyIcon"
                    android:text="Order id :"
                    android:textSize="18sp"
                     />

                <!-- Icon Drawable -->

                <TextView
                    android:id="@+id/orderIdlabel"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="162dp"
                    android:layout_marginRight="162dp"
                    android:layout_toStartOf="@id/copyIcon"
                    android:layout_toLeftOf="@id/copyIcon"
                    android:text="Order id :"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/copyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="53dp"
                    android:clickable="true"
                    android:contentDescription="Copy Order ID"
                    android:enabled="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@drawable/copy_icon_selector"
                    android:tooltipText="Copy Order ID" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="364dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewCustomerNamelabel"
                    android:layout_width="146dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="179dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer Name:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCustomerName"
                    android:layout_width="155dp"
                    android:layout_height="37dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="176dp"
                    android:layout_marginLeft="176dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer Name"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="365dp"
                android:layout_height="54dp">

                <TextView
                    android:id="@+id/textViewCustomerPhonelabel"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="179dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer Phone:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCustomerPhone"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="176dp"
                    android:layout_marginLeft="176dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer Phone"
                    android:textSize="18sp"
                     />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="363dp"
                android:layout_height="69dp">

                <TextView
                    android:id="@+id/textViewCustomerAddresslabel"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="179dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer Address:"
                    android:textSize="18sp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCustomerAddress"
                    android:layout_width="191dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="172dp"
                    android:layout_marginLeft="172dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer Address"
                    android:textSize="18sp"
 />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="366dp"
                android:layout_height="50dp">

                <!-- Dish Name Label -->
                <TextView
                    android:id="@+id/dishNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="179dp"
                    android:layout_marginRight="179dp"
                    android:text="Dish Name:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDishName"
                    android:layout_width="202dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="161dp"
                    android:layout_marginLeft="161dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="179dp"
                    android:text="Dish Name"
                    android:textSize="18sp"
                   />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="373dp"
                android:layout_height="58dp">

                <!-- Customer City Label -->
                <TextView
                    android:id="@+id/customerCityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="179dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer City:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Customer City TextView -->
                <TextView
                    android:id="@+id/textViewCustomerCity"
                    android:layout_width="202dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="161dp"
                    android:layout_marginLeft="161dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="179dp"
                    android:text="Customer City"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="370dp"
                android:layout_height="52dp">

                <!-- Dish Price Label -->
                <TextView
                    android:id="@+id/dishPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="179dp"
                    android:layout_marginRight="179dp"
                    android:text="Dish Price:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Dish Price TextView -->
                <TextView
                    android:id="@+id/textViewDishPrice"
                    android:layout_width="202dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="161dp"
                    android:layout_marginLeft="161dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="179dp"
                    android:text="Dish Price"
                    android:textSize="18sp"
                    />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>