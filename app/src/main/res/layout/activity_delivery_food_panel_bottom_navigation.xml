<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryFoodPanel_BottomNavigation">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container"
        android:layout_above="@id/deliveryBottom"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/deliveryBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-1dp"
        android:background="@color/orange"
        android:backgroundTint="@color/white"
        app:itemIconTint="@color/menu_item_color"
        app:itemTextColor="@color/menu_item_color"
        app:menu="@menu/delivery_bottom_navigation"
        app:labelVisibilityMode="selected" />

</RelativeLayout>